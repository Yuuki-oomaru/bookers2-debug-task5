<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/profile', user: current_user %>
      <!--メモ 右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->
      <h2>New book</h2>
      <%= render 'books/newform', book: @book %>
    </div>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %>
          prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-xs-9">
      <% if @user_or_book == "1" %>
        <!--users一覧 -->
        <%= render 'users/list', users: @users %>
      <% else %>
          <!--books一覧 -->
        <%= render 'books/list', books: @books %>
      <% end %>
   </div>
 </div>
</div>
